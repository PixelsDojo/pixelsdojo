<header>
  <div class="header-container">
    <div class="logo-section">
      <img src="/images/pixeldojo_logo_round_.png" alt="Pixels Dojo" class="logo">
      <div class="logo-text">
        <h1>PIXELS DOJO</h1>
        <p class="tagline">Master TerraVilla â€¢ Earn $PIXEL â€¢ Join the Community</p>
      </div>
    </div>

    <div class="right-section" style="display: flex; flex-direction: column; align-items: flex-end; gap: 0.8rem;">
      <div class="price-widget" id="price-widget-container" style="opacity: 0; transition: opacity 0.4s ease;">
        <script async defer src="https://widgets.coingecko.com/coingecko-coin-price-marquee-widget.js"></script>
        <coingecko-coin-price-marquee-widget 
          coin-ids="pixels" 
          currency="usd" 
          background-color="transparent" 
          font-color="#edff84">
        </coingecko-coin-price-marquee-widget>
      </div>

      <!-- ðŸŒ Translate -->
      <div id="google_translate_element"></div>

      <div class="user-nav" style="display: flex; gap: 0.8rem; flex-wrap: nowrap; align-items: center;">
        <% if (user) { %>
          <span>Welcome, <%= user.display_name || user.username %>!</span>

          <!-- Profile link: for ALL logged-in users -->
          <a href="/profile" class="btn btn-small">Profile</a>

          <!-- Dashboard: for contributors AND admins -->
          <% if (user.is_contributor || user.is_admin) { %>
            <a href="/dashboard" class="btn btn-small btn-dashboard">My Dashboard</a>
          <% } %>

          <!-- Admin Panel: only for admins -->
          <% if (user.is_admin) { %>
            <a href="/admin" class="btn btn-small btn-admin">Admin Panel</a>
          <% } %>

          <a href="/logout" class="btn btn-small btn-logout">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-small">Login</a>
          <a href="/register" class="btn btn-small">Register</a>
        <% } %>
      </div>
    </div>
  </div>
</header>

<script>
  window.addEventListener('load', () => {
    const widget = document.getElementById('price-widget-container');
    if (widget) widget.style.opacity = '1';
  });
</script>

<!-- ðŸŒ Google Translate -->
<style>
  #google_translate_element { display: flex; align-items: center; }
  .goog-te-gadget-simple {
    background: rgba(65, 225, 20, 0.1) !important;
    border: 1px solid rgba(65, 225, 20, 0.4) !important;
    border-radius: 6px !important;
    padding: 4px 10px !important;
    font-size: 0.82rem !important;
    cursor: pointer !important;
    white-space: nowrap !important;
  }
  .goog-te-gadget-simple span,
  .goog-te-gadget-simple .goog-te-menu-value span { color: #41e114 !important; }
  .goog-te-gadget-simple img { display: none !important; }  /* hide Google logo */
  .goog-te-banner-frame.skiptranslate { display: none !important; } /* hide top bar */
  body { top: 0 !important; }  /* prevent page jumping down */
</style>
<script>
  function googleTranslateElementInit() {
    new google.translate.TranslateElement({
      pageLanguage: 'en',
      layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
      autoDisplay: false
    }, 'google_translate_element');
  }
</script>
<script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
