<header>
  <div class="header-container">
    <div class="logo-section">
      <img src="/images/pixeldojo_logo_round_.png" alt="Pixels Dojo" class="logo">
      <div class="logo-text">
        <h1>PIXELS DOJO</h1>
        <p class="tagline">Master TerraVilla ‚Ä¢ Earn $PIXEL ‚Ä¢ Join the Community</p>
      </div>
    </div>

    <div class="right-section" style="display: flex; flex-direction: column; align-items: flex-end; gap: 0.8rem;">
      <div class="price-widget" id="price-widget-container" style="opacity: 0; transition: opacity 0.4s ease;">
        <script async defer src="https://widgets.coingecko.com/coingecko-coin-price-marquee-widget.js"></script>
        <coingecko-coin-price-marquee-widget 
          coin-ids="pixels" 
          currency="usd" 
          background-color="transparent" 
          font-color="#edff84">
        </coingecko-coin-price-marquee-widget>
      </div>

      <!-- üåç Translate -->
      <div id="translate-widget">
        <a id="translate-link" href="#" target="_blank" rel="noopener noreferrer"
           style="display:inline-flex; align-items:center; gap:0.4rem; padding:5px 10px; background:rgba(65,225,20,0.1); border:1px solid rgba(65,225,20,0.4); border-radius:6px; font-size:0.82rem; color:#41e114; text-decoration:none; transition:all 0.2s;"
           onmouseover="this.style.background='rgba(65,225,20,0.2)'" onmouseout="this.style.background='rgba(65,225,20,0.1)'">
          üåç Translate
        </a>
      </div>

      <div class="user-nav" style="display: flex; gap: 0.8rem; flex-wrap: nowrap; align-items: center;">
        <% if (user) { %>
          <span>Welcome, <%= user.display_name || user.username %>!</span>

          <!-- Profile link: for ALL logged-in users -->
          <a href="/profile" class="btn btn-small">Profile</a>

          <!-- Dashboard: for contributors AND admins -->
          <% if (user.is_contributor || user.is_admin) { %>
            <a href="/dashboard" class="btn btn-small btn-dashboard">My Dashboard</a>
          <% } %>

          <!-- Admin Panel: only for admins -->
          <% if (user.is_admin) { %>
            <a href="/admin" class="btn btn-small btn-admin">Admin Panel</a>
          <% } %>

          <a href="/logout" class="btn btn-small btn-logout">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-small">Login</a>
          <a href="/register" class="btn btn-small">Register</a>
        <% } %>
      </div>
    </div>
  </div>
</header>

<script>
  window.addEventListener('load', () => {
    const widget = document.getElementById('price-widget-container');
    if (widget) widget.style.opacity = '1';
  });
</script>

<script>
  // Set translate link to Google Translate with current page URL
  (function() {
    var link = document.getElementById('translate-link');
    if (link) {
      var pageUrl = encodeURIComponent(window.location.href);
      link.href = 'https://translate.google.com/translate?sl=en&tl=auto&u=' + pageUrl;
      // Update on navigation
      link.addEventListener('click', function() {
        this.href = 'https://translate.google.com/translate?sl=en&tl=auto&u=' + encodeURIComponent(window.location.href);
      });
    }
  })();
</script>
