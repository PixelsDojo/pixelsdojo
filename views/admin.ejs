<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - NPC Management</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo-section">
                <img src="/images/pixeldojo_logo_round_.png" alt="Pixels Dojo">
                <h1>PIXELS DOJO - ADMIN</h1>
            </div>
            <div class="user-nav">
                <span>Welcome, <%= user.username %>!</span>
                <a href="/">Home</a>
                <a href="/npcs">View NPCs</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
    </header>

    <div class="admin-container">
        <h1>üõ†Ô∏è NPC Management</h1>
        
        <div class="admin-actions">
            <button onclick="showAddModal()" class="btn-primary">‚ûï Add New NPC</button>
        </div>

        <div class="npc-table">
            <table>
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Description</th>
                        <th>Order</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% npcs.forEach(npc => { %>
                        <tr>
                            <td><img src="<%= npc.image_path %>" alt="<%= npc.name %>" class="npc-thumb" onerror="this.src='/images/npcs/default-npc.png'"></td>
                            <td><%= npc.name %></td>
                            <td><%= npc.location %></td>
                            <td><%= npc.description ? npc.description.substring(0, 50) + '...' : 'No description' %></td>
                            <td><%= npc.display_order %></td>
                            <td class="actions">
                                <button onclick="editNPC(<%= npc.id %>, '<%= npc.name %>', '<%= npc.location %>', '<%= npc.description || '' %>', <%= npc.display_order %>)" class="btn-edit">‚úèÔ∏è Edit</button>
                                <button onclick="deleteNPC(<%= npc.id %>, '<%= npc.name %>')" class="btn-delete">üóëÔ∏è Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Add NPC Modal -->
    <div id="addModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('addModal')">&times;</span>
            <h2>Add New NPC</h2>
            <form id="addForm" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Name *</label>
                    <input type="text" name="name" required>
                </div>
                <div class="form-group">
                    <label>Location *</label>
                    <input type="text" name="location" required>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="file" name="image" accept="image/*">
                    <small>Recommended: 200x200px PNG or JPG</small>
                </div>
                <div class="form-group">
                    <label>Display Order</label>
                    <input type="number" name="display_order" value="999">
                </div>
                <button type="submit" class="btn-primary">Add NPC</button>
            </form>
        </div>
    </div>

    <!-- Edit NPC Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal('editModal')">&times;</span>
            <h2>Edit NPC</h2>
            <form id="editForm" enctype="multipart/form-data">
                <input type="hidden" id="edit_id" name="id">
                <div class="form-group">
                    <label>Name *</label>
                    <input type="text" id="edit_name" name="name" required>
                </div>
                <div class="form-group">
                    <label>Location *</label>
                    <input type="text" id="edit_location" name="location" required>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea id="edit_description" name="description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label>Image (leave empty to keep current)</label>
                    <input type="file" name="image" accept="image/*">
                    <small>Recommended: 200x200px PNG or JPG</small>
                </div>
                <div class="form-group">
                    <label>Display Order</label>
                    <input type="number" id="edit_display_order" name="display_order">
                </div>
                <button type="submit" class="btn-primary">Update NPC</button>
            </form>
        </div>
    </div>

    <script src="/js/admin.js"></script>
</body>
</html>
