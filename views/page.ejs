<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= page.title %> | Pixels Dojo Wiki</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/category/<%= page.category %>">
        <%= page.category.charAt(0).toUpperCase() + page.category.slice(1) %>
      </a></li>
      <li><a href="/pages/<%= page.slug %>"><%= page.title %></a></li>
    </ul>
  </nav>

  <div class="main-wrapper">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h4>Library</h4>
      <a href="/">ğŸ  All Articles</a>
      <a href="/npcs">ğŸ§‘â€ğŸ¤â€ğŸ§‘ NPC Gallery</a>
      <hr>
      <h5>Categories</h5>
      <a href="/category/startup">Start Here</a>
      <a href="/category/earn">Earn $PIXEL</a>
      <a href="/category/mastery">Mastery</a>
      <a href="/category/community">Community</a>
    </aside>

    <!-- Main content -->
    <div class="main-content-area">
      <article class="wiki-page">
        <header class="page-header">
          <h1><%= page.title %></h1>
          <div class="page-meta">
            <span>By <%= page.author_display_name || 'Community' %></span>
            <span>Â· <%= new Date(page.created_at).toLocaleDateString() %></span>
            <% if (page.updated_at && page.updated_at !== page.created_at) { %>
              <span>Â· Updated <%= new Date(page.updated_at).toLocaleDateString() %></span>
            <% } %>
            <span>Â· <%= page.views || 0 %> views</span>
          </div>
        </header>

        <!-- Author / Creator card -->
        <%- include('partials/author-card', {
          author: page.author_display_name || 'Community',
          profile_image: page.author_profile_image || '/images/default-profile.png'
        }) %>

        <!-- Main content -->
        <div class="content-body">
          <%- page.content %>
        </div>

        <!-- Screenshots -->
        <% 
          let screenshots = [];
          try {
            screenshots = JSON.parse(page.screenshots || '[]');
          } catch (e) {}
        %>
        <% if (screenshots.length > 0) { %>
          <section class="screenshot-gallery">
            <h3>Screenshots</h3>
            <div class="gallery-grid">
              <% screenshots.forEach((shot) => { %>
                <img 
                  src="<%= shot %>" 
                  alt="Screenshot from <%= page.title %>" 
                  loading="lazy"
                  class="gallery-img"
                >
              <% }) %>
            </div>
          </section>
        <% } else { %>
          <p class="no-media">No screenshots available yet.</p>
        <% } %>

        <!-- Like / Dislike -->
        <div class="interaction-bar">
          <button 
            class="like-btn <%= liked ? 'liked' : '' %>" 
            data-page-id="<%= page.id %>"
          >
            ğŸ‘ <%= page.upvotes || 0 %>
          </button>
          <button 
            class="dislike-btn <%= disliked ? 'disliked' : '' %>" 
            data-page-id="<%= page.id %>"
          >
            ğŸ‘ <%= page.downvotes || 0 %>
          </button>
        </div>

        <!-- Placeholder for comments / discussion -->
        <section class="comments-section">
          <h3>Community Discussion</h3>
          <p>Comments coming soon...</p>
        </section>
      </article>

      <%- include('partials/footer') %>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
