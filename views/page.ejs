<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= page.title %> | Pixels Dojo Wiki</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/category/<%= page.category %>">
        <%= page.category ? page.category.charAt(0).toUpperCase() + page.category.slice(1) : 'Uncategorized' %>
      </a></li>
      <li><a href="/pages/<%= page.slug %>"><%= page.title %></a></li>
    </ul>
  </nav>

  <div class="main-wrapper">
    <!-- Sidebar -->
    <aside class="sidebar">
      <h4>Library</h4>
      <a href="/">ğŸ  All Articles</a>
      <a href="/npcs">ğŸ§‘â€ğŸ¤â€ğŸ§‘ NPC Gallery</a>
      <hr>
      <h5>Categories</h5>
      <a href="/category/startup">Start Here</a>
      <a href="/category/earn">Earn $PIXEL</a>
      <a href="/category/mastery">Mastery</a>
      <a href="/category/community">Community</a>
    </aside>

    <!-- Main content -->
    <div class="main-content-area">
      <article class="wiki-page">
        <header class="page-header">
          <h1><%= page.title %></h1>
          <div class="page-meta">
            <span>By <%= page.author_display_name || 'Community' %></span>

            <!-- Safe created date -->
            <span>Â· <%= page.created_at ? new Date(page.created_at).toLocaleDateString() : 'Unknown' %></span>

            <!-- Safe updated date â€“ only show if valid and different from created -->
            <% 
              let showUpdated = false;
              let updatedStr = '';
              if (page.updated_at) {
                try {
                  const updDate = new Date(page.updated_at);
                  if (!isNaN(updDate.getTime()) && page.updated_at !== page.created_at) {
                    showUpdated = true;
                    updatedStr = updDate.toLocaleDateString();
                  }
                } catch (e) {}
              }
            %>
            <% if (showUpdated) { %>
              <span>Â· Updated <%= updatedStr %></span>
            <% } %>

            <span>Â· <%= page.views || 0 %> views</span>
          </div>

     <!-- Author profile display -->
     <div class="author-profile">
       <img 
         src="<%= page.author_profile_image || '/images/default-avatar.png' %>" 
         alt="<%= page.author_display_name || 'Community' %>'s profile" 
         style="width: 48px; height: 48px; border-radius: 50%; object-fit: cover; margin-right: 12px;"
       >
       <div class="author-info">
         <strong>By <%= page.author_display_name || 'Community' %></strong>
         <% if (page.author_bio) { %>
           <p class="author-bio"><%= page.author_bio %></p>
         <% } %>
         <!-- Optional: link to full profile page (add later if you create /profile/:id route) -->
         <% if (page.author_id) { %>
           <a href="/profile/<%= page.author_id %>" class="view-profile-link">View Profile</a>
         <% } %>
       </div>
     </div>

        <!-- Main content -->
        <div class="content-body">
          <%- page.content %>
        </div>

        <!-- Screenshots -->
        <% 
          let screenshots = [];
          try {
            screenshots = JSON.parse(page.screenshots || '[]');
          } catch (e) {}
        %>
        <% if (screenshots.length > 0) { %>
          <section class="screenshot-gallery">
            <h3>Screenshots</h3>
            <div class="gallery-grid">
              <% screenshots.forEach((shot) => { %>
                <img 
                  src="<%= shot %>" 
                  alt="Screenshot from <%= page.title %>" 
                  loading="lazy"
                  class="gallery-img"
                >
              <% }) %>
            </div>
          </section>
        <% } else { %>
          <p class="no-media">No screenshots available yet.</p>
        <% } %>

        <!-- Like / Dislike -->
        <div class="interaction-bar">
          <button 
            class="like-btn <%= liked ? 'liked' : '' %>" 
            data-page-id="<%= page.id %>"
          >
            ğŸ‘ <%= page.upvotes || 0 %>
          </button>
          <button 
            class="dislike-btn <%= disliked ? 'disliked' : '' %>" 
            data-page-id="<%= page.id %>"
          >
            ğŸ‘ <%= page.downvotes || 0 %>
          </button>
        </div>

        <!-- Placeholder for comments / discussion -->
        <section class="comments-section">
          <h3>Community Discussion</h3>
          <p>Comments coming soon...</p>
        </section>
      </article>

      <%- include('partials/footer') %>
    </div>
  </div>

  <script src="/js/main.js"></script>
</body>
</html>
