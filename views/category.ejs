<h1><%= category.charAt(0).toUpperCase() + category.slice(1) %> Guides</h1>
<div class="card-grid">
  <% pages.forEach(page => { %>
    <div class="card">
      <h3><a href="/pages/<%= page.slug %>"><%= page.title %></a></h3>
      <p><%= page.summary || page.content.substring(0, 150) + '...' %></p>
    </div>
  <% }) %>
</div>
