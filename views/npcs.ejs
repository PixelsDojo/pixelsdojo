    <div class="container">
        <div class="npc-header">
            <h1>ğŸ­ NPC Directory</h1>
            <p class="subtitle">Your complete guide to all the friendly faces in TerraVilla</p>
        </div>

        <!-- Share to Social Media -->
        <div style="margin:1.5rem 0; padding:1rem; background:rgba(20,20,40,0.6); border:1px solid rgba(0,255,255,0.2); border-radius:10px; clear:both;">
          <p style="color:#aaa; font-size:0.85rem; margin:0 0 0.75rem 0;">ğŸ“¤ Share this page:</p>
          <div style="display:flex; flex-direction:row; flex-wrap:wrap; gap:0.5rem; align-items:center;">
            <a id="shareTwitter" href="#" target="_blank" rel="noopener noreferrer" style="display:inline-block; padding:0.5rem 1rem; background:#1da1f2; color:white; text-decoration:none; border-radius:6px; font-size:0.85rem; font-weight:bold; white-space:nowrap;">ğŸ¦ X / Twitter</a>
            <a id="shareFacebook" href="#" target="_blank" rel="noopener noreferrer" style="display:inline-block; padding:0.5rem 1rem; background:#1877f2; color:white; text-decoration:none; border-radius:6px; font-size:0.85rem; font-weight:bold; white-space:nowrap;">ğŸ‘¥ Facebook</a>
            <a id="shareWhatsapp" href="#" target="_blank" rel="noopener noreferrer" style="display:inline-block; padding:0.5rem 1rem; background:#25d366; color:white; text-decoration:none; border-radius:6px; font-size:0.85rem; font-weight:bold; white-space:nowrap;">ğŸ’¬ WhatsApp</a>
            <button onclick="copyShareLink(this)" style="display:inline-block; padding:0.5rem 1rem; background:rgba(0,255,255,0.15); color:#00ffff; border:1px solid #00ffff; border-radius:6px; font-size:0.85rem; font-weight:bold; cursor:pointer; white-space:nowrap;">ğŸ”— Copy Link</button>
          </div>
        </div>
        <script>
          (function(){
            var url = encodeURIComponent(window.location.href);
            var title = encodeURIComponent(document.title);
            document.getElementById("shareTwitter").href = "https://twitter.com/intent/tweet?url="+url+"&text="+title;
            document.getElementById("shareFacebook").href = "https://www.facebook.com/sharer/sharer.php?u="+url;
            document.getElementById("shareWhatsapp").href = "https://wa.me/?text="+title+"%20"+url;
          })();
          function copyShareLink(btn) {
            navigator.clipboard.writeText(window.location.href).then(function(){
              btn.textContent="âœ… Copied!";
              setTimeout(function(){ btn.textContent="ğŸ”— Copy Link"; }, 2000);
            });
          }
        </script>

<div class="sort-controls" style="margin: 1.5rem 0; text-align: center;">
  <strong>Sort by:</strong>
  <a href="/npcs?sort=name" class="<%= currentSort === 'name' ? 'active' : '' %>">Name Aâ€“Z</a> |
  <a href="/npcs?sort=name-desc" class="<%= currentSort === 'name-desc' ? 'active' : '' %>">Name Zâ€“A</a> |
  <a href="/npcs?sort=location" class="<%= currentSort === 'location' ? 'active' : '' %>">Location Aâ€“Z</a> |
  <a href="/npcs?sort=location-desc" class="<%= currentSort === 'location-desc' ? 'active' : '' %>">Location Zâ€“A</a> |
  <a href="/npcs?sort=name" class="<%= currentSort === 'name' || !currentSort ? 'active' : '' %>">Default (A-Z)</a>
</div>
        <!-- Search -->
        <div style="margin: 1rem 0;">
          <input type="text" id="npcClientSearch" placeholder="Search NPCs by name or location..."
            oninput="filterNpcs()"
            style="width:100%; max-width:400px; padding:0.7rem 1rem; background:rgba(0,0,0,0.3); border:1px solid rgba(0,255,255,0.3); border-radius:8px; color:white; font-size:0.95rem;">
        </div>
        <div class="npc-grid" id="npcGrid">
            <% npcs.forEach(npc => { %>
                <div class="npc-card" data-name="<%= npc.name.toLowerCase() %>" data-location="<%= (npc.location || '').toLowerCase() %>">
                    <div class="npc-image">
                        <img src="<%= npc.image_path %>" alt="<%= npc.name %>" 
                             onerror="this.src='/images/npcs/default-npc.png'">
                    </div>
                    <div class="npc-info">
                        <h3 class="npc-name"><%= npc.name %></h3>
                        <p class="npc-location">ğŸ“ <%= npc.location %></p>
                        <% if (npc.description) { %>
                            <p class="npc-description"><%= npc.description %></p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>

        <% if (npcs.length === 0) { %>
            <div class="no-npcs">
                <p>No NPCs have been added yet. Check back soon!</p>
            </div>
        <% } %>
    </div>

      <%- include('partials/footer') %>
    <script src="/js/chat-widget.js"></script>
    <script>
      function filterNpcs() {
        var term = document.getElementById("npcClientSearch").value.toLowerCase();
        document.querySelectorAll(".npc-card").forEach(function(card) {
          var match = card.dataset.name.includes(term) || card.dataset.location.includes(term);
          card.style.display = match ? "" : "none";
        });
      }
    </script>
</body>
