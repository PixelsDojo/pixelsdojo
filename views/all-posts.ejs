  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/chat-widget.css">
</head>
<body>
  <%- include('partials/header') %>
<nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/category/startup">Start Here</a></li>
        <li><a href="/category/earn">Earn $PIXEL</a></li>
        <li><a href="/category/mastery">Mastery</a></li>
        <li><a href="/npcs">NPCs</a></li>
        <li><a href="/category/community">Community</a></li>
      </ul>
    </nav

  <div class="main-wrapper">
    <aside class="sidebar">
      <!-- Your existing sidebar code here -->
      <h4>Library</h4>
      <a href="/">üè† All Articles</a>
      <a href="/npcs">üßë‚Äçü§ù‚Äçüßë NPC Gallery</a>
      <hr>
      <h5>Categories</h5>
      <a href="/category/startup">Start Here</a>
      <a href="/category/earn">Earn $PIXEL</a>
      <a href="/category/mastery">Mastery</a>
      <a href="/category/community">Community</a>
    </aside>

    <div class="main-content-area">
      <h1>All Articles</h1>
      
      <% if (pages.length === 0) { %>
        <p>No articles yet ‚Äî check back soon!</p>
      <% } else { %>
        <div class="all-posts-list">
          <% pages.forEach(page => { %>
            <div class="post-item">
              <h3>
                <a href="/pages/<%= page.slug %>"><%= page.title %></a>
              </h3>
              <div class="post-meta">
                <small>
                  By <%= page.author_display_name || 'Community' %> 
                  ¬∑ <%= new Date(page.created_at).toLocaleDateString() %>
                </small>
              </div>
              <p class="post-snippet">
                <%= (page.summary || page.content.substring(0, 150) + '...') %>
              </p>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>
<script src="/js/chat-widget.js"></script>
</body>
</html>


