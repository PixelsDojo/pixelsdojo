<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Site Analytics - Pixels Dojo Admin</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
  <style>
    .analytics-container {
      max-width: 1600px;
      margin: 2rem auto;
      padding: 0 1rem;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1rem;
      margin: 1.5rem 0;
    }
    @media (max-width: 1024px) {
      .stats-grid { grid-template-columns: repeat(2, 1fr); }
    }
    .stat-card {
      background: linear-gradient(135deg, rgba(0,255,255,0.1) 0%, rgba(237,255,132,0.1) 100%);
      border: 2px solid rgba(0,255,255,0.3);
      border-radius: 8px;
      padding: 1rem;
      text-align: center;
    }
    .stat-value {
      font-size: 1.8rem;
      font-weight: bold;
      color: var(--cyan);
      margin: 0;
    }
    .stat-label {
      color: #b8b8b8;
      font-size: 0.75rem;
      margin-top: 0.3rem;
    }
    .section-box {
      background: rgba(20,20,40,0.6);
      border: 2px solid rgba(0,255,255,0.3);
      border-radius: 12px;
      padding: 1.5rem;
      margin: 0;
    }
    .section-title {
      color: var(--cyan);
      margin: 0 0 1rem 0;
      font-size: 1.1rem;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.85rem;
    }
    th, td {
      padding: 8px 12px;
      text-align: left;
      border-bottom: 1px solid rgba(0,255,255,0.2);
    }
    th {
      color: var(--cyan);
      font-weight: bold;
    }
    td {
      color: #ddd;
    }
    .activity-item {
      padding: 0.6rem;
      background: rgba(0,0,0,0.3);
      border-left: 3px solid var(--cyan);
      margin-bottom: 0.4rem;
      border-radius: 4px;
      font-size: 0.85rem;
    }
    .activity-time {
      color: #999;
      font-size: 0.75rem;
    }
    .back-btn {
      display: inline-block;
      background: var(--cyan);
      color: black;
      padding: 0.8rem 1.5rem;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      margin-bottom: 1rem;
    }
    .back-btn:hover {
      background: var(--yellow);
    }
    .grid-2col {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 1.5rem;
      margin: 1.5rem 0;
    }
    @media (max-width: 1024px) {
      .grid-2col { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="analytics-container">
    <a href="/admin" class="back-btn">‚Üê Back to Admin Dashboard</a>
    
    <h1 style="color: var(--yellow); margin-bottom: 0.3rem; font-size: 1.8rem;">üìä Site Analytics</h1>
    <p style="color: #b8b8b8; margin-bottom: 1.5rem; font-size: 0.9rem;">Real-time traffic stats for Pixels Dojo</p>

    <!-- 4 Stat Cards -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-value"><%= (overallStats?.totalUniqueVisitors || 0).toLocaleString() %></div>
        <div class="stat-label">Total Visitors</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= (overallStats?.totalPageViews || 0).toLocaleString() %></div>
        <div class="stat-label">Total Page Views</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= (monthlyStats?.monthlyVisitors || 0).toLocaleString() %></div>
        <div class="stat-label">Month's Visitors</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= (monthlyStats?.monthlyPageViews || 0).toLocaleString() %></div>
        <div class="stat-label">Month's Views</div>
      </div>
    </div>

    <!-- Row 1: Chart + Popular Pages -->
    <div class="grid-2col">
      <div class="section-box">
        <h2 class="section-title">Daily Traffic (Last 30 Days)</h2>
        <canvas id="trafficChart" style="max-height: 280px;"></canvas>
      </div>

      <div class="section-box">
        <h2 class="section-title">Top Pages</h2>
        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Page</th>
              <th style="text-align: right;">Views</th>
            </tr>
          </thead>
          <tbody>
            <% (popularPages || []).slice(0, 8).forEach((page, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td style="max-width: 180px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="<%= page.page_path %>">
                  <%= page.page_path %>
                </td>
                <td style="text-align: right;"><strong><%= page.views.toLocaleString() %></strong></td>
              </tr>
            <% }) %>
            <% if (!popularPages || popularPages.length === 0) { %>
              <tr>
                <td colspan="3" style="text-align: center; color: #999;">No data yet</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Row 2: Recent Activity + Advertiser Stats -->
    <div class="grid-2col">
      <div class="section-box">
        <h2 class="section-title">Recent Activity</h2>
        <div style="max-height: 350px; overflow-y: auto;">
          <% if (recentActivity && recentActivity.length > 0) { %>
            <% recentActivity.slice(0, 12).forEach(activity => { %>
              <div class="activity-item">
                <strong><%= activity.page_path %></strong>
                <div class="activity-time">
                  <%= new Date(activity.created_at).toLocaleString() %>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p style="color: #999; text-align: center;">No activity yet</p>
          <% } %>
        </div>
      </div>

      <div style="background: linear-gradient(135deg, rgba(0,204,0,0.15) 0%, rgba(0,255,255,0.15) 100%); border: 3px solid rgba(0,255,255,0.5); border-radius: 12px; padding: 1.5rem; margin: 0;">
        <h3 style="color: var(--cyan); margin-top: 0; font-size: 1.1rem;">üìà Advertiser Stats</h3>
        <div style="color: #ddd; font-size: 0.9rem; line-height: 2;">
          <strong>Total Visitors:</strong> <%= (overallStats?.totalUniqueVisitors || 0).toLocaleString() %><br>
          <strong>Total Views:</strong> <%= (overallStats?.totalPageViews || 0).toLocaleString() %><br>
          <strong>Daily Average:</strong> <%= Math.round((monthlyStats?.monthlyPageViews || 0) / 30).toLocaleString() %> views/day<br>
          <strong>Top Page:</strong><br>
          <span style="font-size: 0.85rem; color: #aaa;">
            <%= (popularPages && popularPages[0]) ? popularPages[0].page_path : 'N/A' %>
          </span><br>
          <strong style="color: var(--cyan);"><%= (popularPages && popularPages[0]) ? popularPages[0].views.toLocaleString() : 0 %> views</strong>
        </div>
        <p style="color: #999; font-size: 0.75rem; margin: 1rem 0 0 0;">
          üí° Screenshot this box when pitching to advertisers!
        </p>
      </div>
    </div>

  </div>

  <%- include('partials/footer') %>

  <script>
    // Traffic Chart
    const ctx = document.getElementById('trafficChart').getContext('2d');
    const dailyData = <%- JSON.stringify(dailyStats || []) %>;
    
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: dailyData.map(d => d.date),
        datasets: [{
          label: 'Page Views',
          data: dailyData.map(d => d.page_views),
          borderColor: '#00ffff',
          backgroundColor: 'rgba(0,255,255,0.1)',
          tension: 0.4,
          fill: true
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: true,
        plugins: {
          legend: {
            labels: {
              color: '#00ffff',
              font: { size: 11 }
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              color: '#b8b8b8',
              font: { size: 10 }
            },
            grid: {
              color: 'rgba(0,255,255,0.1)'
            }
          },
          x: {
            ticks: {
              color: '#b8b8b8',
              font: { size: 10 }
            },
            grid: {
              color: 'rgba(0,255,255,0.1)'
            }
          }
        }
      }
    });
  </script>
</body>
</html>
